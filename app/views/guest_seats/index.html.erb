<p id="notice"><%= notice %></p>

<h1>Listing Guest Seats</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Row</th>
      <th>Seat</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guest_seats.each do |guest_seat| %>
      <tr>
        <td><%= guest_seat.user_id %></td>
        <td><%= guest_seat.row %></td>
        <td><%= guest_seat.seat %></td>
        <td><%= guest_seat.section %></td>
        <td><%= link_to 'Show', guest_seat %></td>
        <td><%= link_to 'Edit', edit_guest_seat_path(guest_seat) %></td>
        <td><%= link_to 'Destroy', guest_seat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

